	note = {Publisher: American Meteorological Society
Section: Journal of the Atmospheric Sciences},
	pages = {1024--1036},
	file = {Full Text PDF:C\:\\Users\\felip\\Zotero\\storage\\XBU4LZ9X\\Valdez y Young - 1985 - Number Fluxes in Equilibrium Raindrop Populations.pdf:application/pdf;Snapshot:C\:\\Users\\felip\\Zotero\\storage\\L3RCWHYT\\1520-0469_1985_042_1024_nfierp_2_0_co_2.html:text/html},

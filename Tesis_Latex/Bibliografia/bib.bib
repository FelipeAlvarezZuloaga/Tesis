	number = {5},
	urldate = {2022-04-07},
	journal = {Journal of the Atmospheric Sciences},
	author = {Dolan, B. and Fuchs, B. and Rutledge, S. A. and Barnes, E. A. and Thompson, E. J.},
	month = may,
	year = {2018},
	note = {Publisher: American Meteorological Society
Section: Journal of the Atmospheric Sciences},
	pages = {1453--1476},
	file = {Full Text PDF:C\:\\Users\\felip\\Zotero\\storage\\BEIB7ZKB\\Dolan et al. - 2018 - Primary Modes of Global Drop Size Distributions.pdf:application/pdf;Snapshot:C\:\\Users\\felip\\Zotero\\storage\\B2C6PVTN\\jas-d-17-0242.1.html:text/html},
